<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="2025_10_29_1761711000_add_error_message_to_tool_log" author="claude-code">
        <comment>Add error_message column to agent_tool_invocation_log for debugging failed tool calls</comment>

        <addColumn tableName="agent_tool_invocation_log">
            <column name="error_message" type="text">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="agent_tool_invocation_log" columnName="error_message"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
